# ~/.bashrc_aliases

# Quicker cd 
alias cd='cd '
alias ...='../..'
alias ....='../../..'
alias cd..='cd ..'
alias cd...='cd ...'
alias cd....='cd ....'

# Add colors
alias ls='ls --group-directories-first --color'
alias diff='diff --color=auto'
alias grep='grep --color=auto'

# Simpler command names
alias open='xdg-open'
alias archnews='informant'
alias optimize-png='find -iname "*.png" -print0 | xargs -0 -n 1 -P 7 optipng -preserve'

# Quality of life
alias cat='bat -pp'
alias find='fd'
alias cp='rsync -ah --info=progress2'
alias rm='rm -i'

# Shorthands
alias v='vim'
alias c='clear'
alias l='ls'
alias q='exit'
alias ll='ls -lh'
alias la='ls -a'
