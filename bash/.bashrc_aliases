# I like colors
alias ls='ls --group-directories-first --color'
alias diff='diff --color=auto'
alias grep='grep --color=auto'

# Simpler command names
alias open='xdg-open'
alias archnews='informant'
alias up='cd ..'

# The bad habit stopper
alias rm='rm -i'

# Shorthands to commands
alias c='clear'
alias l='ls'
alias q='exit'
alias ll='ls -lh'
alias la='ls -a'
alias cd..='cd ..'
